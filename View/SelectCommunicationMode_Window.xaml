<Window x:Class="MyEmmControl.View.SelectCommunicationMode_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyEmmControl"
        mc:Ignorable="d"
        Title="MyEmmControl-选择通信模式"
        Height="150"
        Width="350"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <ComboBox Name="cbx_CommunicationType" Grid.Row="1" Margin="5">

            </ComboBox>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btn_Ok"
                        Grid.Column="1"
                        Content="确定"
                        Margin="5"
                        Click="btn_Ok_Click">

                </Button>
            </Grid>

        </Grid>

    </Grid>
</Window>
